doctype 5
html(lang='en')
  head
    meta(charset='utf-8')
    link(rel='shortcut icon', href='/img/favicon.png')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no')
    title KISST
    script(src='/js/jquery-1.11.2.min.js')
    link(href='//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css', rel='stylesheet')
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/bootcards-desktop.min.css', rel="stylesheet")
    link(href='/css/portal.css', rel='stylesheet')
    link(href='//fonts.googleapis.com/css?family=Lato&subset=latin,latin-ext', rel='stylesheet')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.15.0/jquery.validate.min.js')
    block head
  body
    .container-fluid
      .bootcards-cards
        .row.col-md-4.col-md-offset-4
            form.form-horizontal#login(action="/login", method='post')
              .panel.panel-default
                .panel-heading.clearfix
                    h3.panel-title.pull-left KISST PORTAL
                    .btn-group.pull-right
                      button.btn.btn-primary
                        | Log In
                .modal-body
                  .form-group
                    .col-md-4
                      label.control-label Username
                    .col-md-8
                      input.form-control(type='text', value='', name='username', required)
                  .form-group
                    .col-md-4
                      label.control-label Password
                    .col-md-8
                      input.form-control(type='password', value='', name='password', required)
                  .form-group
                    .col-md-4
                      label.control-label KISST Number
                    .col-md-8
                      input.form-control(type='number', value='', name='number', required)
                .panel-footer.text-center
                    a(href="/reset_page") Forgot password?

  script(type='text/javascript').
    $("#login").validate()
