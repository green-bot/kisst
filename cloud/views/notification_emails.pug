extends ./layout

block content
  .col-sm-6.col-sm-offset-3
    .panel.panel-default
      .bootcards-list
        .panel-heading
          span.title Notification Emails
          ul.pull-right.no-list-dots
            li
              a(data-toggle="collapse", href="#new_email", aria-expanded="false", aria-controls="new_email")
                i.fa.fa-plus-square

        #new_email.collapse
          .panel-body
            form.form-horizontal(method="POST", action="/portal/config/notificationEmailAdd")
              .input-group
                input.form-control(name="email", placeholder="Additional notification email")
                span.input-group-btn
                  button.btn.btn-primary
                    i.fa.fa-plus-square.fa-lg
        .list-group
            each notification_email in notificationEmails
              .list-group-item
                =notification_email
                a(href='/portal/config/email_delete?email=' + encodeURIComponent(notification_email), data-pjax='#main')
                  i.fa.fa-trash-o.fa-lg
