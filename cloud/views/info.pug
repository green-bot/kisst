extends ./layout

block content
  .row.col-sm-6.col-md-8
    .panel.panel-default
      .panel-heading.clearfix
        h3.panel-title.pull-left Information
      .list-group
        .list-group-item
          h4.list-group-item-heading Name
          p.list-group-item-text #{bot.name}
        .list-group-item
          h4.list-group-item-heading Keyword
          p.list-group-item-text #{keywords}
        .list-group-item
          h4.list-group-item-heading Description
          p.list-group-item-text #{bot.description}
        .list-group-item
          h4.list-group-item-heading Username
          p.list-group-item-text #{user.emails[0].address}
        if email
          .list-group-item
            h4.list-group-item-heading Email
            p.list-group-item-text #{email}
